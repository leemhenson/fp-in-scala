{
  "name": "fp-in-scala",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "scripts": {
    "build": "npm run compile && npm run test",
    "compile": "rm -rf ./lib && tsc",
    "format": "npm run lint && npm run prettier && npm run lint",
    "lint": "tslint -c tslint.json --fix '{src,tests}/**/*.{ts,tsx}'",
    "prettier": "prettier --write --list-different --parser ${npm_package_prettier_parser} --trailing-comma ${npm_package_prettier_trailingComma} --print-width ${npm_package_prettier_printWidth} \"{src,tests}/**/*.ts\" || true",
    "test": "NODE_ENV=test jest --verbose",
    "test:watch": "NODE_ENV=test jest --verbose --watch --runInBand"
  },
  "dependencies": {
    "fp-ts": "^1.3.0",
    "lodash": "^4.17.5",
    "monocle-ts": "1.0.0",
    "newtype-ts": "0.2.0",
    "seedrandom": "^2.4.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.107",
    "@types/node": "^9.6.5",
    "@types/seedrandom": "^2.4.27",
    "@types/uuid": "^3.4.3",
    "jest": "^22.4.3",
    "prettier": "^1.12.0",
    "ts-jest": "^22.4.3",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-immutable": "^4.5.2",
    "typescript": "^2.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "prettier": {
    "parser": "typescript",
    "printWidth": 100,
    "trailingComma": "all"
  }
}
